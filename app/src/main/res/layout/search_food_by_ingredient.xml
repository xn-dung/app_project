<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.SearchFragment"
    android:background="@drawable/gradient_main_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/barSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/grey_bg"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search dishes"
                    android:padding="8dp" />

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/darker_gray" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">


        <TableLayout
            android:id="@+id/tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:stretchColumns="0,1,2">

            <TableRow android:id="@+id/table_row_item">

                <EditText
                    android:id="@+id/editTen1"
                    android:hint="Tên"
                    android:inputType="textCapSentences"
                    android:padding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/editSoLuong1"
                    android:hint="Số lượng"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spinnerDonVi1"
                    android:entries="@array/donvi_array"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/colorPrimary"
                android:text="+" />

            <Button
                android:id="@+id/buttonTru"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimaryLight"
                android:text="-"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <!-- Nút Search & Picture -->
        <LinearLayout
            android:id="@+id/hehe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="Search" />

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>